{
  "name": "@nickhudkins/malcolm",
  "version": "0.3.0",
  "description": "A Man-In-The-Middle Proxy for Development!",
  "repository": {
    "url": "https://github.com/nickhudkins/malcolm"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "malcolm": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo .turbo",
    "start:dev": "NODE_OPTIONS='--no-deprecation' node --watch --import tsx src/cli.ts",
    "start": "NODE_OPTIONS='--no-deprecation' node --import tsx src/cli.ts",
    "test": "node dist/cli.js",
    "format": "prettier --write . --ignore-path ../../.gitignore",
    "lint": "eslint --fix",
    "check:format": "prettier --check \"**/*.{ts,js,md}\"",
    "check:lint": "eslint",
    "tsc:watch": "tsc -w",
    "build": "tsc"
  },
  "author": "Nick Hudkins <nick@nickhudkins.com>",
  "contributors": [
    "Sean Boult <sean@boult.me>"
  ],
  "license": "MIT",
  "dependencies": {
    "@braintree/sanitize-url": "^7.0.1",
    "@types/yargs": "^17.0.32",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "get-port": "^7.1.0",
    "mockttp": "^3.10.2",
    "network": "^0.7.0",
    "tsx": "^4.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "*",
    "config-eslint": "*",
    "config-tsconfig": "*",
    "https-proxy-agent": "^7.0.4",
    "prettier": "*",
    "typescript": "*",
    "vitest": "*"
  }
}
